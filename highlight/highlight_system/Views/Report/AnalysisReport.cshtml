                        <th>料號板序</th>
                        <th>批號</th>
                        <th>缺點碼</th>
                        <th>缺點名稱</th>
                        <th>缺點顆數</th>
                        <th>非共同點顆數</th>
                        <th>共同點</th>
                        <th>共同點顆數</th>
                        <th>日期時間</th>
                    </tr>
                </thead>
                @*<tfoot>
                        <tr>
                            <th>圖號</th>
                            <th>批號</th>
                            <th>缺點碼</th>
                            <th>缺點名稱</th>
                            <th>缺防焊總顆數</th>
                            <th>非共同點缺防焊</th>
                            <th>共同點</th>
                            <th>共同點缺防焊</th>
                            <th>日期時間</th>
                        </tr>
                    </tfoot>*@
                <tbody>
                    @foreach (DataRow dr in Model.Rows)
                    {
                        <tr>
                            <td>
                                @{
                                    if (File.Exists(@"D:\HL_System_File\StackingFig\AVI\" + dr["lot_num"] + @"\Pass\" + dr["lot_num"] + "_" + dr["detail_defect_code"] + ".png"))
                                    {
                                        ViewBag.imgSource = @"D:\HL_System_File\StackingFig\AVI\" + dr["lot_num"] + @"\Pass\" + dr["lot_num"] + "_" + dr["detail_defect_code"] + ".png";
                                    }
                                    else if (File.Exists(@"D:\HL_System_File\StackingFig\AVI\" + dr["lot_num"] + @"\Fail\" + dr["lot_num"] + "_" + dr["detail_defect_code"] + ".png"))
                                    {
                                        ViewBag.imgSource = @"D:\HL_System_File\StackingFig\AVI\" + dr["lot_num"] + @"\Fail\" + dr["lot_num"] + "_" + dr["detail_defect_code"] + ".png";
                                    }
                                    else
                                    {
                                        ViewBag.imgSource = "";
                                    }
                                }
                                <a href="@Url.Action("Image","Report", new { imgSrc = ViewBag.imgSource })" class="btn btn-warning btn-circle" target="_blank"><i class="fas fa-image"></i></a>
                                @*<button type="button" class="btn btn-primary btn-circle" value="@dr["imgSource"]" onclick="showImg(this);" data-toggle="modal" data-target="#myModal"><i class="fas fa-image"></i></button>*@
                            </td>
                            <td>
                                <button type="button" class="btn btn-secondary btn-circle" value="@ViewBag.imgSource" onclick="tableItemDownload(this);"><i class="fas fa-download"></i> </button>
                            </td>
                            <td>@dr["DWG"]</td>
                            <td>@dr["model_num"]</td>
                            <td>@dr["lot_num"]</td>
                            <td>@dr["defect_code"]</td>
                            <td>@dr["detail_defect_code"]</td>
                            <td>@dr["total_fail_qty"]</td>
                            <td>@dr["non_common_fail_qty"]</td>
                            <td>@dr["common_point_fail_qty"]</td>
                            <td>@dr["common_fail_qty"]</td>
                            <td>@DateTime.Parse(dr["datetime"].ToString()).ToString("yyyy/MM/dd HH:mm:ss")</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

